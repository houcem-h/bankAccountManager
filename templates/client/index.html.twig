{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <br>
    
    <div class="row">
        <div class="col-sm-10">
            <h1>Liste des clients</h1>
        </div>
        <div class="col-sm-2">
            <a href="{{ path('client_new') }}" role="button" class="btn btn-outline-success"><i class="fas fa-user-plus"></i> Nouveau client</a>
        </div>
    </div>
    
    <table class="table table-hover table-stripped">
        <thead>
            <tr class="table-dark">
                <th scope="col"><i class="fas fa-key"></i> ID</th>
                <th scope="col"><i class="fas fa-user"></i> Nom et Prénom</th>
                <th scope="col"><i class="fas fa-calendar-day"></i> Date de naissance</th>
                <th scope="col"><i class="fas fa-phone"></i> Téléphone</th>
                <th scope="col"><i class="fas fa-cogs"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ client.id}}</td>
                    <th scope="row">{{ client.prenom }} {{ client.nom }}</th>
                    <td>{{ client.dateNaissance|date("Y/m/d") }}</td>
                    <td>{{ client.tel }}</td>
                    <td>
                        <a name="" id="" class="btn btn-info" href="{{ path("client_show", {'id': client.id})}}" role="button"><i class="fas fa-search-plus"></i> Afficher</a>
                        <a name="" id="" class="btn btn-primary" href="#" role="button"><i class="fas fa-edit"></i> Editer</a>
                        <a name="" id="" class="btn btn-danger" href="{{ path("client_delete", {'id': client.id})}}" role="button"><i class="far fa-trash-alt"></i> Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
